}

/* Seletor de classe */
.menu-principal {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
}

/* Seletor de tag para lista não ordenada */
ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
}

/* Seletor de tag para links */
a {
    color: #ecf0f1;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s;
}

/* Pseudo-classe :hover para links */
a:hover {
    background-color: #34495e;
    color: #3498db;
}

/* Estilização do MAIN */
main {
    display: grid;
    gap: 2rem;
